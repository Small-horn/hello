# 环境变量配置示例文件
# 复制此文件为 .env 并根据您的环境修改相应的值

# 应用程序配置
APP_NAME=hello

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hello_db
DB_USERNAME=root
DB_PASSWORD=root
DB_DRIVER=com.mysql.cj.jdbc.Driver
DB_USE_SSL=false
DB_TIMEZONE=UTC

# JPA配置
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_DIALECT=org.hibernate.dialect.MySQLDialect
JPA_FORMAT_SQL=true

# 服务器配置
SERVER_PORT=8080

# 日志配置
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

